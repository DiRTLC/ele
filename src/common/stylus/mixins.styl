border-1px(color)
  position relative
  border none
  &:after
    position: absolute
    left 0
    bottom 0
    content: ''
    width 100%
    height 1px
    background-color color
    transform scaleY(0.5)

bg-img(url)
  background-image  url("./"+ url +"@2x.png")
  @media  only screen and (-webkit-min-device-pixel-ratio:3)
    background-image  url("./"+ url +"@3x.png")


star(url)
  background-image url("./"+ url +"@2x.png")
  @media  only screen and (-webkit-min-device-pixel-ratio:3)
    background-image url("./"+ url +"@3x.png")
